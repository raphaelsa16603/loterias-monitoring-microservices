{
  "Kafka": {
    "BootstrapServers": "localhost:9092",
    "Topics": [
      "loterias.megasena",
      "loterias.lotofacil",
      "loterias.quina",
      "loterias.lotomania",
      "loterias.timemania",
      "loterias.diadesorte",
      "loterias.duplasena",
      "loterias.supersete",
      "loterias.maismilionaria",
      "loterias.federal",
      "loterias.loteca"
    ],
    "GroupId": "loterias-consumer-group"
  },

  "WriteApi": {
    "BaseUrl": "http://localhost:5004"
  },

  "Serilog": {
    "Using": [ "Serilog.Sinks.Graylog", "Serilog.Sinks.Console" ],
    "MinimumLevel": "Information",
    "WriteTo": [
      { "Name": "Console" },
      {
        "Name": "Graylog",
        "Args": {
          "hostnameOrAddress": "localhost",
          "port": 12201,
          "transportType": "Udp"
        }
      }
    ],
    "Enrich": [ "FromLogContext", "WithMachineName" ],
    "Properties": { "Application": "Loterias.JobConsumerService" }
  }
}
