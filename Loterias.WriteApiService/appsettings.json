{
  "Mongo": {
    "ConnectionString": "mongodb://mongodb:27017",
    "DatabaseName": "loteriasdb"
  },
  "Redis": {
    "Host": "redis",
    "Port": 6379,
    "DefaultTTLMinutes": 360
  },
  "Kafka": {
    "BootstrapServers": "kafka:9092",
    "BaseTopicName": "loterias"
  },
  "Serilog": {
    "Using": [ "Serilog.Sinks.Console", "Serilog.Sinks.Graylog" ],
    "MinimumLevel": "Information",
    "WriteTo": [
      {
        "Name": "Graylog",
        "Args": {
          "hostnameOrAddress": "graylog",
          "port": 12201,
          "transportType": "Udp"
        }
      },
      { "Name": "Console" }
    ],
    "Enrich": [ "FromLogContext", "WithMachineName", "WithThreadId" ],
    "Properties": { "Application": "Loterias.WriteApiService" }
  },
  "AllowedHosts": "*"
}
